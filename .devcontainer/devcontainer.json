{
  "name": "python-tkinter",
  "build": { "dockerfile": "Dockerfile" },

  "runArgs": [
    "-e", "DISPLAY=${localEnv:DISPLAY}",
    "-v", "/tmp/.X11-unix:/tmp/.X11-unix:rw"
  ],

  "customizations": {
    "vscode": { "extensions": ["ms-python.python", "ms-python.vscode-pylance"] }
  },
  "containerEnv": { "QT_X11_NO_MITSHM": "1" }
}
